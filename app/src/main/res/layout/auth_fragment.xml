<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_fragment_background"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/auth_fragment__iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tech_market_logo"
        app:layout_constraintBottom_toTopOf="@+id/auth_fragment__et_login_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/auth_fragment__et_login_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:autofillHints="username"
        android:inputType="textPersonName|textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/auth_fragment__et_login_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_fragment__iv_logo" />

    <EditText
        android:id="@+id/auth_fragment__et_login_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:autofillHints="password"
        app:layout_constraintBottom_toTopOf="@+id/auth_fragment__bt_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_fragment__et_login_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/auth_fragment__bt_login"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="@drawable/auth_fragment_bt_login_background"
        android:padding="16dp"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/auth_fragment__tv_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_fragment__et_login_password" />

    <TextView
        android:id="@+id/auth_fragment__tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_fragment__bt_login" />

</androidx.constraintlayout.widget.ConstraintLayout>