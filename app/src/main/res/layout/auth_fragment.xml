<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_fragment_background"
    android:clickable="true"
    android:focusable="true">
    <ProgressBar
        android:id="@+id/auth_fragment__progressBar"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/auth_fragment__iv_logo"
        style="@style/logo_image_view"
        app:layout_constraintBottom_toTopOf="@+id/auth_fragment__et_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/auth_fragment__et_email"
        style="@style/email_edit_text"
        app:layout_constraintBottom_toTopOf="@+id/auth_fragment__et_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_fragment__iv_logo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/auth_fragment__et_password"
        style="@style/password_edit_text"
        app:layout_constraintBottom_toTopOf="@+id/auth_fragment__bt_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_fragment__et_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/auth_fragment__bt_login"
        style="@style/action_button"
        android:background="@drawable/auth_fragment_bt_login_background"
        android:text="@string/login_button"
        app:layout_constraintBottom_toTopOf="@id/auth_fragment__tv_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_fragment__et_password" />

    <TextView
        android:id="@+id/auth_fragment__tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_text_view"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_fragment__bt_login" />

</androidx.constraintlayout.widget.ConstraintLayout>