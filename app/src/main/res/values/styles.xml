<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logo_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/tech_market_logo</item>
    </style>

    <style name="email_edit_text">
        <item name="android:layout_width">300dp</item>
        <item name="android:hint">Email</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="password_edit_text">
        <item name="android:layout_width">300dp</item>
        <item name="android:hint">Password</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="name_edit_text">
        <item name="android:layout_width">300dp</item>
        <item name="android:hint">Name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="action_button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="catalog_icon">
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:tint">@color/purple_200</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="catalog_button">
        <item name="android:scaleX">0.4</item>
        <item name="android:scaleY">0.4</item>
        <item name="android:background">@drawable/ic_baseline_arrow_drop_down_24</item>
    </style>

    <style name="catalog_textview">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>