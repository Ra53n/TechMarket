<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/compare_recycler_view_item_remove"
            style="@style/action_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|right"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_baseline_close_24"
            android:padding="12dp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/compare_recycler_view_item_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            tools:src="@drawable/img" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/compare_recycler_view_item_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:text="6.7 Смартфон Apple iPhone 13 Pro Max 256 ГБ голубой "
            android:textSize="20dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/compare_recycler_view_item_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center|left"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="179 999 Р" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/compare_recycler_view_item_like"
                style="@style/action_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/background_button"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/compare_recycler_view_item_price"
                app:layout_constraintTop_toBottomOf="@id/compare_recycler_view_item_price" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/compare_recycler_view_item_buy"
                style="@style/action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_button"
                android:backgroundTint="@color/pink_light"
                android:padding="12dp"
                android:text="Купить"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/compare_recycler_view_item_like"
                app:layout_constraintTop_toTopOf="@id/compare_recycler_view_item_like" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>